{
    "mcpServers": {
        "GlassEnterprise": {
            "command": "node",
            "args": [
                "/absolute/path/to/GlassEnterprise-hybrid/build/index.js"
            ],
            "env": {
                "NEO4J_URI": "bolt://localhost:7687",
                "NEO4J_USERNAME": "neo4j",
                "NEO4J_PASSWORD": "your-password",
                "NEO4J_DATABASE": "neo4j",
                "NEO4J_CONNECTION_TIMEOUT_MS": "8000",
                "NEO4J_QUERY_TIMEOUT_MS": "30000",
                "NEO4J_MAX_POOL_SIZE": "50"
            }
        },
        "neo4j-database": {
            "command": "/Users/ahman/.local/bin/uvx",
            "args": [
                "mcp-neo4j-cypher@0.3.1",
                "--transport",
                "stdio"
            ],
            "env": {
                "NEO4J_URI": "bolt://localhost:7687",
                "NEO4J_USERNAME": "neo4j",
                "NEO4J_PASSWORD": "your-password",
                "NEO4J_DATABASE": "neo4j"
            }
        }
    }
}